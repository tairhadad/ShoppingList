    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box" >

      <% addTaskToList.forEach(function(items){%>
        <form action="/delete" method="post">
          <div class="item">
          <input type="checkbox" name= "checkbox" value="<%=items._id %>" onchange="this.form.submit()" >
          <p><%= items.name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>

      <%}); %>




        <form class="item" action="/" method="post">
